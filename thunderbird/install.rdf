<?xml version="1.0"?>

<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:em="http://www.mozilla.org/2004/em-rdf#">

  <Description about="urn:mozilla:install-manifest">
    <em:id>otrmail@cryptic.be</em:id>
    <em:version>0.01</em:version>
    <em:type>2</em:type> <!-- 2 means extension -->
    <em:unpack>true</em:unpack>

    <em:targetApplication>
      <Description>
        <!-- Thunderbird -->
        <em:id>{77d843d0-e1a9-11e1-9b23-0800200c9a66}</em:id>
        <em:minVersion>13.0</em:minVersion>
        <em:maxVersion>14.*</em:maxVersion>
      </Description>
    </em:targetApplication>
    <em:targetApplication>
      <Description>
        <!-- Seamonkey -->
        <em:id>{77d843d0-e1a9-11e1-9b23-0800200c9a66}</em:id>
        <em:minVersion>1</em:minVersion>
        <em:maxVersion>2.11.*</em:maxVersion>
      </Description>
    </em:targetApplication>

    <em:targetPlatform>Linux_x86-gcc3</em:targetPlatform>
    <em:targetPlatform>Linux_x86_64-gcc3</em:targetPlatform>
    <em:targetPlatform>WINNT_x86-msvc</em:targetPlatform>
    <em:targetPlatform>Darwin_x86-gcc3</em:targetPlatform>
    <em:targetPlatform>Darwin_x86_64-gcc3</em:targetPlatform>

    <!-- Front End MetaData -->
    <em:name>OTRmail</em:name>
    <em:description>OTR email encryption</em:description>
    <em:creator>OTRmail Team</em:creator>
    <em:developer>Jonah Silas Sheridan</em:developer>
    <em:developer>Griffin Boyce</em:developer>
    <em:homepageURL>http://otrmail.cryptic.be/</em:homepageURL>

    <!-- Front End Integration Hooks (used by Extension Manager)-->
    <em:optionsURL>chrome://otrmail/content/pref-otrmail.xul</em:optionsURL>
    <em:aboutURL>chrome://otrmail/content/otrmailAbout.xul</em:aboutURL>
    <em:iconURL>chrome://otrmail/skin/otrmail-about.png</em:iconURL>
  </Description>
